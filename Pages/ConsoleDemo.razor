@page "/console"
@using HACC.Enumerations
@using Terminal.Gui
@using HACC.Applications
@using Console = HACC.Components.Console

<PageTitle>Console Demo</PageTitle>

@if (ActiveConsole is ConsoleType.StandardOutput)
{
    <Console ConsoleType="ConsoleType.StandardOutput"></Console>
}
else if (ActiveConsole is ConsoleType.StandardError)
{
    <Console ConsoleType="ConsoleType.StandardError" @ref="ConsoleReference"></Console>
}